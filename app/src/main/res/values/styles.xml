<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>
    <!-- Base application theme. -->
    <style name="MyAppsTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_img</item>
    </style>

    <style name="textViewHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="editTextAutorizationStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">5dp</item>

    </style>

    <style name="myCbxAutorize" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/colorDarkGray_</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="myBtnAutorize">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:textColor">@color/colorDarkGray_</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>

    </style>
</resources>
